<%- include('../_partial/_header'); -%>
<div class="col-md-8">

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3>Reserve the spot.</h3>
        </div>
        <div class="panel-body">
            <form class="form-signin" method="POST" action="/submit">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                    <input type="text" id="fullname" class="form-control" placeholder="Full name" name="fullname" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@</span>
                    <input type="email" id="email" class="form-control" placeholder="Email address" name="email"
                        aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-phone"></span></span>
                    <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="Phone Number" aria-describedby="basic-addon1" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" title="Phone number must be in the format XXX-XXX-XXXX" required>
                  </div>
                  <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-book"></span></span>
                    <input type="text" id="licenseplate" name="licenseplate" class="form-control" placeholder="License plate" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-calendar"></span></span>
                    <input type="date" id="begindate" name="begindate" class="form-control" placeholder="Beginning date" aria-describedby="basic-addon1">
                  </div>
                  <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-time"></span>
                    <input type="time" id="begintime" name="begintime" class="form-control" placeholder="Beginning time" aria-describedby="basic-addon1" step="60">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-calendar"></span>
                    <input type="date" id="enddate" name="enddate" class="form-control" placeholder="Ending date" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-time"></span>
                    <input type="time" id="endtime" name="endtime" class="form-control" placeholder="Ending time" aria-describedby="basic-addon1" step="60">
                </div>
                <br />
                <input type="submit" class="btn btn-default navbar-btn" value="Save info" />

            </form>
        </div>
    </div>
</div>



<%- include('../_partial/_footer'); -%>